<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp">

		<LinearLayout
				android:id="@+id/setReferrer_referrerId_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<TextView
					style="?android:textAppearanceMedium"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".3"
					android:text="@string/setReferrer_referrerId_label"/>

			<EditText
					android:id="@+id/setReferrer_referrerId"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".7"
					android:hint="@string/setReferrer_referrerId_hint"/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/setReferrer_providerId_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<TextView
					style="?android:textAppearanceMedium"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".3"
					android:text="@string/setReferrer_providerId_label"/>

			<EditText
					android:id="@+id/setReferrer_providerId"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".7"
					android:hint="@string/setReferrer_providerId_hint"/>

		</LinearLayout>

		<LinearLayout
				android:id="@+id/setReferrer_event_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<TextView
					style="?android:textAppearanceMedium"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".3"
					android:text="@string/setReferrer_event_label"/>

			<EditText
					android:id="@+id/setReferrer_event"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".7"
					android:hint="@string/setReferrer_event_hint"/>

		</LinearLayout>

		<TextView
				style="?android:textAppearanceLarge"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Attach custom key/value pairs (optional)"/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<EditText
					android:id="@+id/key1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".5"
					android:hint="@string/hint_key_1"/>

			<EditText
					android:id="@+id/value1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".5"
					android:hint="@string/hint_value_1"/>

		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<EditText
					android:id="@+id/key2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".5"
					android:hint="@string/hint_key_2"/>

			<EditText
					android:id="@+id/value2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".5"
					android:hint="@string/hint_value_2"/>

		</LinearLayout>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

			<EditText
					android:id="@+id/key3"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".5"
					android:hint="@string/hint_key_3"/>

			<EditText
					android:id="@+id/value3"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight=".5"
					android:hint="@string/hint_value_3"/>

		</LinearLayout>

		<Button
				android:id="@+id/buttonSetReferrer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/setReferrer_button"/>

	</LinearLayout>

</ScrollView>
