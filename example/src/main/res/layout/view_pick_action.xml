<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:textSize="25dp"
			  android:text="Action"/>

	<Spinner android:id="@+id/spinner_select_notification_type"
			 android:layout_width="match_parent"
			 android:layout_height="50dp"/>

	<RelativeLayout android:gravity="center"
					android:layout_margin="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
				  android:layout_centerVertical="true"
				  android:layout_height="wrap_content"
				  android:layout_alignParentLeft="true"
				  android:textSize="20dp"
				  android:text="Notification Data"/>

		<Button android:id="@+id/button_add_notification_data"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:text="Add"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

	</RelativeLayout>

	<LinearLayout android:id="@+id/container_notification_data"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="vertical"/>

</LinearLayout>